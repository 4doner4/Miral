@page
@model ForPractice.Pages.LoginPageModel
@{
}

@if (HttpContext.Session.Keys.Count() == 0)
{
    <div class="loginmain">
        <div class="form-wrapper">
            <div class="form-wrapper__card">
                <form method="post">
                    <div class="form-group d-flex flex-column">
                        <label for="nicknameId">Your nickname:</label>
                        <input id="nicknameId" name="nickname" type="text"/>
                    </div>
                    <div class="form-group d-flex flex-column">
                        <label for="passwordId">Your password:</label>
                        <input id="passwordId" name="password" type="password" />
                    </div>
                    <button class="btn btn-outline-dark" type="submit">Log in</button>
                    <a class="btn btn-outline-dark" asp-page="RegistrationPage"> Registration</a>
                </form>
            </div>
        </div>
        <div class="coluns" >
            <h1>ROAD TO THE DREAM</h1>
            <video src="~/images/ИГОРЬ ВОЙТЕНКО МОТИВИРУЕТ ВИДЕО.mp4" autoplay="autoplay" controls="controls"></video>
        </div>
    </div>
} else {
    <div class="container-fluid d-flex justify-content-center">
        <h1 class="text-message">This should be a personal account</h1>
    </div>
}
